<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherForecast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="android:navigationIcon">@color/black</item>
    </style>

    <style name="ToolbarTheme">
        <!-- Color of the title text in the Toolbar -->
<!--        <item name="android:textColorSecondary">?attr/colorOnSecondary</item>-->
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="queryBackground">?attr/colorPrimaryVariant</item>
        <item name="submitBackground">?attr/colorPrimaryVariant</item>
        <item name="searchHintIcon">@null</item>
    </style>

</resources>